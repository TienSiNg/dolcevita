            index ++;
            this.displaytotextfleid(index);
        }else {
            JOptionPane.showMessageDialog(next, "Đây là bản ghi cuối cùng");
        }
              
    }                                    

    private void preActionPerformed(java.awt.event.ActionEvent evt) {                                    
