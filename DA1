    private void txtmasanphamActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
    }                                            

    private void btnthemActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        
    if (txtIDsanpham.getText().trim().isEmpty() || 
        txtmasanpham.getText().trim().isEmpty() || 
        txttensanpham.getText().trim().isEmpty() || 
        txtsoluong.getText().trim().isEmpty()) {
        
        JOptionPane.showMessageDialog(null, "Không được để trống các trường dữ liệu");
        return;
    }
    
    // Lấy dữ liệu từ các trường
    String id = txtIDsanpham.getText();
    String ma = txtmasanpham.getText();
    String ten = txttensanpham.getText();
    int soluong;
    try {
        soluong = Integer.parseInt(txtsoluong.getText());
    } catch (NumberFormatException e) {
        JOptionPane.showMessageDialog(null, "Số lượng phải là số nguyên hợp lệ");
        return;
    }
    int trangthai = rdoconhang.isSelected() ? 1 : 0;

    // Kết nối tới cơ sở dữ liệu và thêm dữ liệu
    conn = ConnectDB.getConnection();
    String query = "INSERT INTO san_pham (id_san_pham, ma_san_pham, ten_san_pham, so_luong, trang_thai) VALUES (?, ?, ?, ?, ?)";

    try {
        PreparedStatement ps = conn.prepareStatement(query);
        ps.setString(1, id);
        ps.setString(2, ma);
        ps.setString(3, ten);
        ps.setInt(4, soluong);
        ps.setInt(5, trangthai);
        int rowsInserted = ps.executeUpdate();
        if (rowsInserted > 0) {
            JOptionPane.showMessageDialog(null, "Thêm sản phẩm thành công");
            loaddata();  // Tải lại dữ liệu sau khi thêm
        }
    } catch (SQLException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(null, "Lỗi khi thêm sản phẩm: " + e.getMessage());
    }
         
    }                                       

    private void btnsuaActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
         
        if (txtIDsanpham.getText().trim().isEmpty() || 
            txtmasanpham.getText().trim().isEmpty() || 
            txttensanpham.getText().trim().isEmpty() || 
            txtsoluong.getText().trim().isEmpty()) {
            
            JOptionPane.showMessageDialog(null, "Không được để trống các trường dữ liệu");
            return;
        }
        
        // Lấy dữ liệu từ các trường
        String id = txtIDsanpham.getText();
        String ma = txtmasanpham.getText();
        String ten = txttensanpham.getText();
        int soluong;
        try {
            soluong = Integer.parseInt(txtsoluong.getText());
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(null, "Số lượng phải là số nguyên hợp lệ");
            return;
        }
        int trangthai = rdoconhang.isSelected() ? 1 : 0;

       
        conn = ConnectDB.getConnection();
        String query = "UPDATE san_pham SET ma_san_pham = ?, ten_san_pham = ?, so_luong = ?, trang_thai = ? WHERE id_san_pham = ?";

        try {
            PreparedStatement ps = conn.prepareStatement(query);
            ps.setString(1, ma);
            ps.setString(2, ten);
            ps.setInt(3, soluong);
            ps.setInt(4, trangthai);
            ps.setString(5, id);
            int rowsUpdated = ps.executeUpdate();
            if (rowsUpdated > 0) {
                JOptionPane.showMessageDialog(null, "Cập nhật sản phẩm thành công");
                loaddata(); 
            }
        } catch (SQLException e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(null, "Lỗi khi cập nhật sản phẩm: " + e.getMessage());
        }
        
    }                                      

    private void btnxoaActionPerformed(java.awt.event.ActionEvent evt) {                                       
         boolean isAdmin = false;
        // TODO add your handling code here:
         if (!isAdmin) {
            JOptionPane.showMessageDialog(null, "Bạn không có quyền xóa sản phẩm");
            return;
        }

        // Kiểm tra nếu trường ID sản phẩm không được để trống
        if (txtIDsanpham.getText().trim().isEmpty()) {
            JOptionPane.showMessageDialog(null, "ID sản phẩm không được để trống");
            return;
        }

        // Lấy ID sản phẩm từ trường văn bản
        String id = txtIDsanpham.getText();

        // Kết nối tới cơ sở dữ liệu và xóa dữ liệu
        conn = ConnectDB.getConnection();
        String query = "DELETE FROM san_pham WHERE id_san_pham = ?";

        try {
            PreparedStatement ps = conn.prepareStatement(query);
            ps.setString(1, id);
            int rowsDeleted = ps.executeUpdate();
            if (rowsDeleted > 0) {
                JOptionPane.showMessageDialog(null, "Xóa sản phẩm thành công");
                loaddata();  // Tải lại dữ liệu sau khi xóa
            }
        } catch (SQLException e) {
            e.printStackTrace();
            JOptionPane.showMessageDialog(null, "Lỗi khi xóa sản phẩm: " + e.getMessage());
        }
    }                                      

