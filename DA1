    //BẢNG SẢN PHẨM ----------------------------------------------------------------
    
     private void loaddata () {
        
        try {
            conn = ConnectDB.getConnection();
            String querry = "SELECT * FROM san_pham";
            Statement st = conn.createStatement();
            ResultSet rs = st.executeQuery(querry);
            list.clear();
            while(rs.next()){
                SanPham sp = new SanPham();
                sp.setIdsanpham(rs.getString(1));
                sp.setMasanpham(rs.getString(2));
                sp.setTensanpham(rs.getString(3));
                sp.setSoluong(rs.getInt(4));
                sp.setTrangthai(rs.getInt(5));
                list.add(sp);      
            }
            this.filltotable();
        } catch (Exception e) {
        }
    }
    public  void filltotable () {
        DefaultTableModel model = (DefaultTableModel) bangsanpham.getModel();
        model.setRowCount(0);
        int stt = 1;
        for (SanPham sanPham : list) {
            Object[] row = {stt++, sanPham.getIdsanpham() ,sanPham.getMasanpham() , sanPham.getTensanpham() , sanPham.getSoluong() , sanPham.getTrangthai()==1?"Còn Hàng":"Hết hàng"};
        model.addRow(row);
        }
    }
    
    public void displaytotextfleid (int index) {
        SanPham sp = list.get(index);
        txtIDsanpham.setText(sp.getIdsanpham());
        txtmasanpham.setText(sp.getMasanpham());
        txttensanpham.setText(sp.getTensanpham());
        txtsoluong.setText(String.valueOf(sp.getSoluong()));
        if (sp.getTrangthai() == 1) {
        rdoconhang.setSelected(true);
        rdohethang.setSelected(false);
    } else {
        rdoconhang.setSelected(false);
        rdohethang.setSelected(true);
    }
        
    }
    
 
public void timkiem() {
    String tukhoa = txttimkiem.getText();
    String tuNhap = "%" + tukhoa + "%";
    String trangThai = "";  
    conn = ConnectDB.getConnection();

    if (txttimkiem.getText().trim().isEmpty()) {
        JOptionPane.showMessageDialog(txttimkiem, "Không được để trống khi tìm kiếm");
        return;
    }
    String querryTimKiem = "SELECT * FROM san_pham WHERE id_san_pham LIKE ? OR ma_san_pham LIKE ? OR ten_san_pham LIKE ?";
    boolean isNumeric = tukhoa.matches("\\d+");  
    if (isNumeric) {
        querryTimKiem += " OR so_luong = ?";
    }
    if (!trangThai.isEmpty()) {
        querryTimKiem += " AND trang_thai = ?";
    }

    try {
        PreparedStatement ps = conn.prepareStatement(querryTimKiem);
        ps.setString(1, tuNhap);
        ps.setString(2, tuNhap);
        ps.setString(3, tuNhap);
        int paramIndex = 4;
        if (isNumeric) {
            ps.setInt(paramIndex++, Integer.parseInt(tukhoa));  
        }
        if (!trangThai.isEmpty()) {
            ps.setString(paramIndex, trangThai);
        }

        ResultSet rs = ps.executeQuery();

        list.clear();  // Clear the list before adding search results
        while (rs.next()) {
            SanPham sp = new SanPham();
            sp.setIdsanpham(rs.getString("id_san_pham"));
            sp.setMasanpham(rs.getString("ma_san_pham"));
            sp.setTensanpham(rs.getString("ten_san_pham"));
            sp.setSoluong(rs.getInt("so_luong"));
            sp.setTrangthai(rs.getInt("trang_thai"));
            list.add(sp);
        }

        filltotable();  // Update the table with search results

    } catch (Exception ex) {
        Logger.getLogger(From_1.class.getName()).log(Level.SEVERE, null, ex);
    }
}


    //BẢNG SẢN PHẨM CHI TIẾT ---------------------------------------------------------------------------------------------
    
    public void loaddataSPCT (){
        
    try {
        conn = ConnectDB.getConnection();
        String query = "SELECT .chi_tiet_san_pham.id_chi_tiet_san_pham, .nhan_hieu.ten_nhan_hieu, .chat_lieu.loai, .kich_thuoc.ten_kich_thuoc, .mau_sac.ten_mau, .khoi_luong.khoi_luong, .xuat_xu.ten_nuoc, \n" +
"                  .nha_san_xuat.ten_nha_san_xuat, .co_giay.ten_co_giay, .chi_tiet_san_pham.id_san_pham, .chi_tiet_san_pham.ten, .chi_tiet_san_pham.so_luong_ton, .chi_tiet_san_pham.trang_thai, \n" +
"                  .chi_tiet_san_pham.don_gia\n" +
"                   FROM     .chat_lieu INNER JOIN\n" +
"                  .chi_tiet_san_pham ON .chat_lieu.id_chat_lieu = .chi_tiet_san_pham.id_chat_lieu INNER JOIN\n" +
"                  .co_giay ON .chi_tiet_san_pham.id_co_giay = .co_giay.id_co_giay INNER JOIN\n" +
"                  .khoi_luong ON .chi_tiet_san_pham.id_khoi_luong = .khoi_luong.id_khoi_luong INNER JOIN\n" +
"                  .kich_thuoc ON .chi_tiet_san_pham.id_kich_thuoc = .kich_thuoc.id_kich_thuoc INNER JOIN\n" +
"                  .mau_sac ON .chi_tiet_san_pham.id_mau_sac = .mau_sac.id_mau_sac INNER JOIN\n" +
"                  .nha_san_xuat ON .chi_tiet_san_pham.id_nha_san_xuat = .nha_san_xuat.id_nha_san_xuat INNER JOIN\n" +
"                  .nhan_hieu ON .chi_tiet_san_pham.id_nhan_hieu = .nhan_hieu.id_nhan_hieu INNER JOIN\n" +
"                  .xuat_xu ON .chi_tiet_san_pham.id_xuat_xu = .xuat_xu.id_xuat_xu";
        Statement st = conn.createStatement();
        ResultSet rs = st.executeQuery(query);
        listct.clear();
        while (rs.next()) {
            SanPhamChiTiet spct = new SanPhamChiTiet();
            spct.setIdchitietsanpham(rs.getString(1));
            spct.setIdnhanhieu(rs.getString(2));
            spct.setIdchatlieu(rs.getString(3));
            spct.setIdkichthuoc(rs.getString(4));
            spct.setIdmausac(rs.getString(5));
            spct.setIdkhoiluong(rs.getString(6));
            spct.setIdxuatxu(rs.getString(7));
            spct.setIdnsx(rs.getString(8));
            spct.setIdcogiay(rs.getString(9));
            spct.setIdsanpham(rs.getString(10));
            spct.setTensanpham(rs.getString(11));
            spct.setSoluong(rs.getInt(12));
            spct.setTrangthaispct(rs.getInt(13));
            spct.setDongia(rs.getFloat(14));
            listct.add(spct);
        }
        this.filltotableSPCT();
    } catch (Exception e) {
        e.printStackTrace();
    }
}
    
    public void filltotableSPCT() {
    DefaultTableModel modelspct = (DefaultTableModel) bangsanphamchitiet.getModel();
    modelspct.setRowCount(0);
    int stt = 1;
        for (SanPhamChiTiet spct : listct) {
        Object[] row = {
            stt++,
            spct.getIdchitietsanpham(),
            spct.getIdnhanhieu(),
            spct.getIdchatlieu(),
            spct.getIdkichthuoc(),
            spct.getIdmausac(),
            spct.getIdkhoiluong(),
            spct.getIdxuatxu(),
            spct.getIdnsx(),
            spct.getIdcogiay(),
            spct.getIdsanpham(),
            spct.getTensanpham(),
            spct.getSoluong(),
            spct.getTrangthaispct()== 1 ? "Còn Hàng" : "Hết hàng",
            spct.getDongia()
        };
        modelspct.addRow(row);
    }
}
 private void loadComboBoxData(JComboBox<String> comboBox, String query, String columnName) {
    try {
        conn = ConnectDB.getConnection();
        PreparedStatement ps = conn.prepareStatement(query);
        ResultSet rs = ps.executeQuery();
        comboBox.removeAllItems();
        while (rs.next()) {
            comboBox.addItem(rs.getString(columnName));
        }
    } catch (SQLException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(this, "Lỗi khi tải dữ liệu lên combobox: " + e.getMessage());
    }
}


        
    
    private void loadComboBoxes() {
    loadComboBoxData(combonhanhieu, "SELECT nhan_hieu.ten_nhan_hieu FROM chi_tiet_san_pham INNER JOIN nhan_hieu ON chi_tiet_san_pham.id_nhan_hieu = nhan_hieu.id_nhan_hieu;", "ten_nhan_hieu");
    loadComboBoxData(comchatlieu, "SELECT .chat_lieu.loai FROM .chat_lieu INNER JOIN .chi_tiet_san_pham ON .chat_lieu.id_chat_lieu = .chi_tiet_san_pham.id_chat_lieu", "loai");
    loadComboBoxData(combomausac, "SELECT .mau_sac.ten_mau FROM .chi_tiet_san_pham INNER JOIN .mau_sac ON .chi_tiet_san_pham.id_mau_sac = .mau_sac.id_mau_sac", "ten_mau");
    loadComboBoxData(comboxuatxu, "SELECT .nha_san_xuat.ten_nha_san_xuat FROM .chi_tiet_san_pham INNER JOIN .nha_san_xuat ON .chi_tiet_san_pham.id_nha_san_xuat = .nha_san_xuat.id_nha_san_xuat INNER JOIN .xuat_xu ON .chi_tiet_san_pham.id_xuat_xu = .xuat_xu.id_xuat_xu", "ten_nha_san_xuat");
    loadComboBoxData(combonsx, "SELECT .xuat_xu.ten_nuoc FROM .chi_tiet_san_pham INNER JOIN .nha_san_xuat ON .chi_tiet_san_pham.id_nha_san_xuat = .nha_san_xuat.id_nha_san_xuat INNER JOIN .xuat_xu ON .chi_tiet_san_pham.id_xuat_xu = .xuat_xu.id_xuat_xu", "ten_nuoc");
    loadComboBoxData(combokhoiluong, "SELECT .khoi_luong.khoi_luong FROM .chi_tiet_san_pham INNER JOIN .khoi_luong ON .chi_tiet_san_pham.id_khoi_luong = .khoi_luong.id_khoi_luong", "khoi_luong");
}

    
    public void displaytotextfieldSPCT(int index) {
    SanPhamChiTiet spct = listct.get(index);
    txtidsanphachitiet.setText(spct.getIdsanpham());
    txtmasanphamchitiet.setText(spct.getIdchitietsanpham());
    txttenspct.setText(spct.getTensanpham());
    txtsoluongspct.setText(String.valueOf(spct.getSoluong()));
    txtdongia.setText(String.valueOf(spct.getDongia()));
    txtsize.setText(String.valueOf(spct.getIdkichthuoc()));
    txtkichthuoc.setText(spct.getIdkichthuoc());
    // Thiết lập giá trị cho ComboBox
    combonhanhieu.setSelectedItem(spct.getIdnhanhieu());
    comchatlieu.setSelectedItem(spct.getIdchatlieu());
    combomausac.setSelectedItem(spct.getIdmausac());
    comboxuatxu.setSelectedItem(spct.getIdxuatxu());
    combonsx.setSelectedItem(spct.getIdnsx());
    combokhoiluong.setSelectedItem(spct.getIdkhoiluong());

    // Thiết lập giá trị cho RadioButton
    if (spct.getTrangthaispct()!= null) {
        if (spct.getTrangthaispct() == 1) {
            rdospctConHang.setSelected(true);
        } else {
            rdospctHetHang.setSelected(true);
        }
    } else {
        rdospctConHang.setSelected(false);
        rdospctHetHang.setSelected(false);
    }
}
    
    private boolean validateFields() {
    if (txtidsanphachitiet.getText().isEmpty() ||
        txtmasanphamchitiet.getText().isEmpty() ||
        txttenspct.getText().isEmpty() ||
        txtsoluongspct.getText().isEmpty() ||
        txtkichthuoc.getText().isEmpty() ||
        txtdongia.getText().isEmpty() ||
        combonhanhieu.getSelectedIndex() == 0 ||
        comchatlieu.getSelectedIndex() == 0 ||
        txtsize.getText().isEmpty() ||
        combomausac.getSelectedIndex() == 0 ||
        comboxuatxu.getSelectedIndex() == 0 ||
        combonsx.getSelectedIndex() == 0 ||
        combokhoiluong.getSelectedIndex() == 0 ||
        (!rdospctConHang.isSelected() && !rdospctHetHang.isSelected())) {

        JOptionPane.showMessageDialog(this, "Vui lòng điền đầy đủ thông tin!");
        return false;
    }

    try {
        String kichThuocStr = txtsize.getText();
        int kichThuoc = Integer.parseInt(kichThuocStr);

        if (kichThuoc < 36 || kichThuoc > 45) {
            JOptionPane.showMessageDialog(this, "Kích thước giày chỉ từ 36 đến 45!");
            return false;
        }
    } catch (NumberFormatException e) {
        JOptionPane.showMessageDialog(this, "Kích thước phải là một số hợp lệ!");
        return false;
    }

    return true;
}


    public void add(SanPhamChiTiet spct) {
    String query = "INSERT INTO chi_tiet_san_pham (id_nhan_hieu, id_chi_tiet_san_pham, id_chat_lieu, id_kich_thuoc, id_mau_sac, id_khoi_luong, id_xuat_xu, id_nha_san_xuat, id_co_giay, id_san_pham, ten, so_luong_ton, trang_thai, don_gia) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)";

    try (Connection conn = ConnectDB.getConnection();
         PreparedStatement ps = conn.prepareStatement(query)) {

        ps.setString(1, spct.getIdnhanhieu());
        ps.setString(2, spct.getIdchitietsanpham());
        ps.setString(3, spct.getIdchatlieu());
        ps.setString(4, spct.getIdkichthuoc());
        ps.setString(5, spct.getIdmausac());
        ps.setString(6, spct.getIdkhoiluong());
        ps.setString(7, spct.getIdxuatxu());
        ps.setString(8, spct.getIdnsx());
        ps.setString(9, spct.getIdcogiay());
        ps.setString(10, spct.getIdsanpham());
        ps.setString(11, spct.getTensanpham());
        ps.setInt(12, spct.getSoluong());

        if (spct.getTrangthaispct() != null) {
            ps.setInt(13, spct.getTrangthaispct());
        } else {
            ps.setObject(13, null, java.sql.Types.INTEGER);
        }

        ps.setFloat(14, spct.getDongia());

        int rowsAffected = ps.executeUpdate();
        System.out.println("Rows affected: " + rowsAffected);

    } catch (SQLException e) {
        e.printStackTrace();
        JOptionPane.showMessageDialog(this, "Đã xảy ra lỗi khi thêm sản phẩm chi tiết!");
    }
}







    
    public  void resetSPCT () {
    txtidsanphachitiet.setText("");
    txtmasanphamchitiet.setText("");
    txttenspct.setText("");
    txtsoluongspct.setText("");
    txtdongia.setText("");
    combonhanhieu.setSelectedIndex(0);
    comchatlieu.setSelectedIndex(0);
    txtsize.setText("");
    combomausac.setSelectedIndex(0);
    comboxuatxu.setSelectedIndex(0);
    combonsx.setSelectedIndex(0);
    combokhoiluong.setSelectedIndex(0);
    rdospctConHang.setSelected(false);
    rdospctHetHang.setSelected(false);
    txttimkiemsanphamchitiet.setText("");
    loaddataSPCT();
    }
    
   public void timkiemspct() {
    String tukhoa1 = txttimkiemsanphamchitiet.getText();
    String tuNhap = "%" + tukhoa1 + "%";
    conn = ConnectDB.getConnection();

    if (txttimkiemsanphamchitiet.getText().trim().isEmpty()) {
        JOptionPane.showMessageDialog(txttimkiem, "Không được để trống khi tìm kiếm");
        return;
    }

    String queryTimKiem = "SELECT chi_tiet_san_pham.id_chi_tiet_san_pham, " +
            "nhan_hieu.ten_nhan_hieu, chat_lieu.loai, kich_thuoc.ten_kich_thuoc, " +
            "mau_sac.ten_mau, khoi_luong.khoi_luong, xuat_xu.ten_nuoc, " +
            "nha_san_xuat.ten_nha_san_xuat, co_giay.ten_co_giay, " +
            "chi_tiet_san_pham.id_san_pham, chi_tiet_san_pham.ten, " +
            "chi_tiet_san_pham.so_luong_ton, chi_tiet_san_pham.trang_thai, " +
            "chi_tiet_san_pham.don_gia " +
            "FROM chat_lieu " +
            "INNER JOIN chi_tiet_san_pham ON chat_lieu.id_chat_lieu = chi_tiet_san_pham.id_chat_lieu " +
            "INNER JOIN co_giay ON chi_tiet_san_pham.id_co_giay = co_giay.id_co_giay " +
            "INNER JOIN khoi_luong ON chi_tiet_san_pham.id_khoi_luong = khoi_luong.id_khoi_luong " +
            "INNER JOIN kich_thuoc ON chi_tiet_san_pham.id_kich_thuoc = kich_thuoc.id_kich_thuoc " +
            "INNER JOIN mau_sac ON chi_tiet_san_pham.id_mau_sac = mau_sac.id_mau_sac " +
            "INNER JOIN nha_san_xuat ON chi_tiet_san_pham.id_nha_san_xuat = nha_san_xuat.id_nha_san_xuat " +
            "INNER JOIN nhan_hieu ON chi_tiet_san_pham.id_nhan_hieu = nhan_hieu.id_nhan_hieu " +
            "INNER JOIN xuat_xu ON chi_tiet_san_pham.id_xuat_xu = xuat_xu.id_xuat_xu " +
            "WHERE chi_tiet_san_pham.id_chi_tiet_san_pham LIKE ? OR " +
            "nhan_hieu.ten_nhan_hieu LIKE ? OR " +
            "chat_lieu.loai LIKE ? OR " +
            "kich_thuoc.ten_kich_thuoc LIKE ? OR " +
            "mau_sac.ten_mau LIKE ? OR " +
            "khoi_luong.khoi_luong LIKE ? OR " +
            "xuat_xu.ten_nuoc LIKE ? OR " +
            "nha_san_xuat.ten_nha_san_xuat LIKE ? OR " +
            "co_giay.ten_co_giay LIKE ? OR " +
            "chi_tiet_san_pham.id_san_pham LIKE ? OR " +
            "chi_tiet_san_pham.ten LIKE ? OR " +
            "chi_tiet_san_pham.so_luong_ton LIKE ? OR " +
            "chi_tiet_san_pham.trang_thai LIKE ? OR " +
            "chi_tiet_san_pham.don_gia LIKE ?";

    boolean isNumeric = tukhoa1.matches("\\d+");
    if (isNumeric) {
        queryTimKiem += " OR chi_tiet_san_pham.so_luong = ?";
    }

    try {
        PreparedStatement ps = conn.prepareStatement(queryTimKiem);
        for (int i = 1; i <= 14; i++) {
            ps.setString(i, tuNhap);
        }
        int paramIndex = 15;
        if (isNumeric) {
            ps.setInt(paramIndex, Integer.parseInt(tukhoa1));
        }

        ResultSet rs = ps.executeQuery();
        listct.clear();  // Clear the list before adding search results

        while (rs.next()) {
            SanPhamChiTiet spct = new SanPhamChiTiet();
            spct.setIdchitietsanpham(rs.getString(1));
            spct.setIdnhanhieu(rs.getString(2));
            spct.setIdchatlieu(rs.getString(3));
            spct.setIdkichthuoc(rs.getString(4));
            spct.setIdmausac(rs.getString(5));
            spct.setIdkhoiluong(rs.getString(6));
            spct.setIdxuatxu(rs.getString(7));
            spct.setIdnsx(rs.getString(8));
            spct.setIdcogiay(rs.getString(9));
            spct.setIdsanpham(rs.getString(10));
            spct.setTensanpham(rs.getString(11));
            spct.setSoluong(rs.getInt(12));
            spct.setTrangthaispct(rs.getInt(13));
            spct.setDongia(rs.getFloat(14));
            listct.add(spct);
        }

        filltotableSPCT(); 

    } catch (Exception ex) {
        Logger.getLogger(From_1.class.getName()).log(Level.SEVERE, null, ex);
    }
}







        

